{
	"file": {
		"/etc/environment": {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/etc/init.d/uwsgi": {
			"exists": true,
			"mode": "0755",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/etc/logrotate.d/uwsgi": {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/etc/nginx/conf.d/eclaim.conf": {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/etc/uwsgi.ini": {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/opt/miniconda2/bin/conda": {
			"exists": true,
			"mode": "0755",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/opt/miniconda2/bin/uwsgi": {
			"exists": true,
			"mode": "0755",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"/root/.bashrc": {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
            		"contains": ["/opt/miniconda2/bin"]
		},
		"{{ django_app_home }}/uwsgi.ini": {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		"{{ django_app_home }}/wsgi.py": {
			"exists": true,
			"mode": "0644",
			"size": 388,
			"owner": "root",
			"group": "root",
			"filetype": "file",
			"contains": []
		},
		{% if ansible_os_family == "Debian" %}"/root/.profile"{% else %}"/root/.bash_profile"{% endif %}: {
			"exists": true,
			"mode": "0644",
			"owner": "root",
			"group": "root",
			"filetype": "file",
            "contains": ["/opt/miniconda2/bin"]
		},
        "{{ django_app_home }}": {
			"exists": true,
			"mode": "0755",
			"owner": "root",
			"group": "root",
			"filetype": "directory",
			"contains": []
		},
	},
	"package": {
		"git": {
			"installed": true
		},
		"nginx": {
			"installed": true
		},
		"unzip": {
			"installed": true
		},
		"uwsgi": {
			"installed": true
		},
        "logrotate": {
			"installed": true
		},
        "epel-release": {
            "installed": {% if ansible_os_family == "Debian"%}false{% else %}true{% endif %}
        }
	},
	"port": {
		"tcp:80": {
			"listening": true,
			"ip": [
				"0.0.0.0"
			]
		},
		"tcp:5432": {
			"listening": true,
			"ip": [
                {% if db_server_ip == "localhost" %}"127.0.0.1"{% else %}"{{ postgresql_listen_addresses }}"{% endif %}
			]
		}
	},
	"service": {
		"nginx": {
			"enabled": true,
			"running": true
		},
		"uwsgi": {
			"enabled": true,
			"running": true
		},
        {% if db_server_ip == "localhost" %}
        "postgresql": {
			"enabled": true,
			"running": true
		},
        {% endif %}
	}
}
